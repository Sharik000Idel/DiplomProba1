    <!-- slider_area_start -->
    <div class="slider_area">
        <div class="single_slider  d-flex align-items-center slider_bg_1">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-7 col-md-6">
                        <div class="slider_text">
                            <h5 class="wow fadeInLeft" data-wow-duration="1s" data-wow-delay=".2s">4536+ Поездок</h5>
                            <h3 class="wow fadeInLeft" data-wow-duration="1s" data-wow-delay=".3s">Начни работать с нами</h3>
                            <p class="wow fadeInLeft" data-wow-duration="1s" data-wow-delay=".4s">Мы предоставляем онлайн услуги по созданию и поиску попуток</p>
                            <div class="sldier_btn wow fadeInLeft" data-wow-duration="1s" data-wow-delay=".5s">
                                <a asp-action="BecomeDriver" asp-controller="User" class="boxed-btn3">Стать водителем</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- slider_area_end -->

    <!-- catagory_area -->
    <div class="catagory_area">
        <div class="container">
            <form class="row cat_search" asp-action=FoundRoutes asp-controller="Route">
                <div class="col-lg-3 col-md-12">
                    <div class="single_input">
                        <input type="text" name="BeginRoute" id="destination_start" placeholder="Откуда">
                    </div>
                </div>
                <div class="col-lg-3 col-md-12">
                    <div class="single_input">
                        <input type="text" name="EndRoute" id="destination_end" placeholder="Куда">
                    </div>
                </div>
                <div class="col-lg-4 col-md-12">
                    <div class="d-flex space-between">
                        <div class="single_input pad0 col-lg-8">
                        <input type="date" name="date" id="date" placeholder="Выберите дату" min="@ViewBag.DateNow" max="2023-12-12" >
                    </div>
                    <div class="single_input" title="Количество пассажиров">
                        <input type="number" name="all" id="all" placeholder="" value="1" min="1" max="3" >
                    </div>
                    </div>
                    
                </div>

  
                <div class="col-lg-2 col-md-12">
                    <div class="job_btn">
                        <input class="boxed-btn3" type="submit" value="Поиск">
                    </div>
                </div>
                </form>
            <div class="row">
                <div class="col-lg-12">
                    <div class="popular_search d-flex align-items-center">
                        <span>Популярные маршруты:</span>
                        <ul>
                            <li><a asp-action=FoundRoutes asp-controller="Route" asp-route-BeginRoute="г Уфа" asp-route-EndRoute="г Казань">Уфа & Казань</a></li>
                            @*<li><a asp-action=FoundRoutes asp-controller="Route" asp-route-BeginRoute="г Казань" asp-route-EndRoute="г Москва">Казань & Москва</a></li>*@
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--/ catagory_area -->

    <!-- популярный города начало  -->
    <div class="popular_catagory_area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section_title mb-40">
                        <h3>Популярные места</h3>
                    </div>
                </div>
            </div>
            <div class="row">

                @foreach (var route in DiplomProba1.Models.Data.Route.MorePopularCity())
                {
                    <div class="col-lg-4 col-xl-3 col-md-6">
                        <div class="single_catagory he-80">
                            <a ><h4>@route.Key</h4></a>
                            <p> @*<span>8 /10</span>*@ В этот город совершено @route.Count() поездок</p>
                        </div>
                    </div>
                }

               
                
            </div>
        </div>
    </div>
    <!-- популярный города конец  -->

    <!-- новые маршруты начало  -->
    <div class="job_listing_area" style="padding-bottom: 80px;">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="section_title">
                        <h3>Новые маршруты</h3>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="brouse_job text-right">
                        <a asp-controller="Route" asp-action="FoundRoutes"  class="boxed-btn4">Посмотреть больше маршрутов</a>
                    </div>
                </div>
            </div>
            <div class="job_lists">
                <div class="row">
                    
                @foreach (DiplomProba1.Models.Data.Route item in ViewBag.VRoutes)
                    {
                        
                    
                    <div class="col-lg-12 col-md-12">
                        <div class="single_jobs white-bg d-flex justify-content-between">
                            <div class="jobs_left d-flex align-items-center">
                                <div class="thumb ">
                                    <img class="DriverPh" src="@item.IdUserNavigation.PhotoUser" alt="Profile Picture">
                                </div>
                                <div class="jobs_conetent">
                                    <a  asp-action="UserPage" asp-controller="User" asp-route-id="@item.IdUser"><h4>Водитель: @item.IdUserNavigation.Fulname</h4></a>
                                    <div class="flexwrap links_locat d-flex align-items-center">
                                        <div class="location">
                                            <p> <i class="fa fa-map-marker"></i>Из: @item.BeginRoute </p>
                                            <p> <i class="fa fa-map-marker"></i>В: @item.EndRoute </p>
                                        </div>
                                        <div class="location">
                                            <p> <i class="fa fa-clock-o"></i> Дата: @item.DataRoute</p>
                                            <p> <i class="fa fa-clock-o"></i> Время: @item.TimeRoute</p>
                                        </div>
                                        <div class="location">
                                            <p> <i class="fa fa-clock-o"></i> Мест: @item.CountFreeRoute()</p>
                                            <p> <i class="fa fa-clock-o"></i> Цена: @item.Cost ₽</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="jobs_right myflex-columnend">
                                <div class="apply_now">
                                    @*<a class="heart_mark" href="#"> <i class="ti-heart">❤</i> </a>*@
                                    <a asp-controller="Route" asp-action="RoutePage" asp-route-id="@item.IdRout" class="boxed-btn3">Посмотреть</a>
                                </div>
                                <div class="date">
                                    <p>Дата размещениия: @item.DateAddedRoude</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    }
                </div>
            </div>
        </div>
    </div>
    <!-- новые маршруты конец  -->

    <!-- лучшие водители начало  -->
    <div class="featured_candidates_area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section_title text-center mb-40">
                        <h3>Лучшие водители</h3>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="candidate_active owl-carousel">

                        @foreach (DiplomProba1.Models.Data.User item in ViewBag.VUsers)
                        {
                            <div class="single_candidates text-center"> 
                            <div class="thumb">
                                <img class="DriverPh" src="@item.PhotoUser" alt="">
                            </div>
                            <a asp-action="UserPage" asp-controller="User" asp-route-id="@item.IdUsers"> <h4>@item.Name @item.Surname</h4></a>
                             @*<p><span>130 поездок</span></p>*@
                            <p><span>@item.Estimation /5</span></p>
                        </div>
                        }
                        
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- лучшие водители конец  -->

