        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section_title text-center mb-40">
                        <h3>Отзывы</h3>
                    </div>
                </div>
                <div class="col-xl-12">
                    <div class="testmonial_active owl-carousel">

                        @foreach (DiplomProba1.Models.Data.Comment item in ViewBag.SiteComment)
