<div class="descript job_details_area">
        <div class="container m-20">
            <div class="row">



                 
                <div class="col-lg-8" >
                    
                    <div class="single_jobs  white-bg">
                        <h3>Маршрут </h3>
                             <div class="d-flex justify-content-between">
                                    <div class="jobs_left d-flex align-items-center">
                                        
                                        <div class="jobs_conetent">
                                            
                                            <div class="links_locat d-flex align-items-center">
                                                <div class="location">
                                                    <h4> <i class="fa fa-map-marker"></i>Из: @ViewBag.Routeinfo.BeginRoute </h4>
                                                    <h4> <i class="fa fa-map-marker"></i>В: @ViewBag.Routeinfo.EndRoute </h4>
                                                </div>
                                                <div class="location">
                                                    <h4> <i class="fa fa-clock-o"></i> Дата: @ViewBag.Routeinfo.DataRoute</h4>
                                                    <h4> <i class="fa fa-clock-o"></i> Время: @ViewBag.Routeinfo.TimeRoute</h4>
                                                </div>
                                                <div class="location">
                                                    <h4> <i class="fa fa-clock-o"></i> Цена: @ViewBag.Routeinfo.Cost ₽</h4>
                                                    <h4> <i class="fa fa-clock-o"></i> Мест: @ViewBag.Routeinfo.CountFreeRoute() </h4>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                </div>
                                    @if (@ViewData["UserChekInRoute"] !=null )
                                    {
                                        if (@ViewData["TimeRoute"] != null)
                                        {
                                            <p>@ViewData["TimeRoute"]</p>
                                        }
                                        else if (@ViewData["InRoute"] != null)
                                        {
                                            <a asp-controller="Route" asp-action="StatusRoute" asp-route-id="@ViewBag.Routeinfo.IdRout" asp-route-status="@ViewData["InRoute"]" class="re_btn boxed-btn3">@ViewData["InRoute"]</a>
                                        }
                                        else
                                        {
                                              <p>@ViewData["UserChekInRoute"]</p>
                                        }
                                       
                                    }
                                    else
                                    {
                                         <div class="jobs_right">
                                            <div class="apply_now">
                                                <a asp-controller="Request" asp-action="RequestForRoute" asp-route-count="@ViewBag.count" asp-route-id="@ViewBag.Routeinfo.IdRout" class="re_btn boxed-btn3">Оставить заявку</a>
                                            </div>
                                        </div> 
                                    }
                                   
                         </div>

                    
                    

                    
                    <div class="job_details_header m-20 white-bg">
                        
                        <div class="single_jobs justify-content-between">
                            <h3>Водитель</h3>
                            <div class="jobs_left d-flex align-items-center">
                                <div class="thumb">
                                    <img class="user-logo" src="@ViewBag.UserInfo.PhotoUser" alt="">
                                </div>
                                <div class="jobs_conetent">
                                   <a asp-action="UserPage" asp-controller="User" asp-route-id="@ViewBag.UserInfo.IdUsers"> <h4> @ViewBag.UserInfo.Fulname</h4> </a> 
                                    <h4>@ViewBag.UserInfo.Age лет</h4>
                                    <div class="links_locat d-flex align-items-center">
                                        <div class="location">
                                            <p> <i class="fa fa-clock-o"></i>Рейтинг: @ViewBag.UserInfo.Estimation / 5</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="descript_wrap white-bg">
                        <div class="single_wrap">
                            <h4>О себе</h4>
                            <p class="big-comment-text">@ViewBag.UserInfo.IdCommentTextNavigation.Text</p>
                        </div>
                    </div>

                   
                    <div class="section-top-border1 m-20 white-bg">
                         <h3 class="size_24">Авто</h3>
				        
				        <div class="row">
					        <div class="col-md-5">
                                <h4 class="mb-30">@(((DiplomProba1.Models.Data.Route)@ViewBag.Routeinfo).IdUserNavigation.Car.NameCar)</h4>
                                <p > Гос-номер: @(((DiplomProba1.Models.Data.Route)@ViewBag.Routeinfo).IdUserNavigation.Car.GosNumber) </p>
						        <p >О машине:  @(((DiplomProba1.Models.Data.Route)@ViewBag.Routeinfo).IdUserNavigation.Car.IdCommentCarNavigation.Text) </p>
						        
					        </div>
					        <div class="col-md-7">
						        <img src="@(((DiplomProba1.Models.Data.Route)@ViewBag.Routeinfo).IdUserNavigation.Car.CarImageNavigation.Photo)" alt="" class="img-fluid">
					        </div>
				        </div>
			        </div>

                    
                    <div class="descript_wrap job_lists m-20 white-bg" >
                        <h4 class="size_24">Отзывы о пользователе</h4>
                        <div class="row">
                            @if (@ViewBag.CountComments == 0)
                        {
                             <div class="max_width text-center">
                            <h4>Отзывов нет</h4>
                            </div>
                        }
                            @foreach (DiplomProba1.Models.Data.Comment item in @ViewBag.Comments)
                            {
                                <div class="col-lg-12 col-md-12">
                                    <div class="single_jobs white-bg">
                                        <div class=" d-flex justify-content-between">
                                            <div class="jobs_left d-flex align-items-center">
                                                <div class="thumb">
                                                    <img class="comment_img" src="@item.IduserLeaveReviewNavigation.PhotoUser" alt="">
                                                </div>
                                                <div class="jobs_conetent">
                                                    <a  asp-action="UserPage" asp-controller="User" asp-route-id="@item.IduserLeaveReview"><h4>@item.IduserLeaveReviewNavigation.Fulname</h4></a>
                                                    
                                                    <div class="links_locat d-flex align-items-center">
                                                        <div class="location">
                                                            <p > <i class="fa fa-map-marker"></i> Оценка: @item.Estimation / 5</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="jobs_right">
                                                <div class="date">
                                                    <p>Дата отзыва: @item.Date</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="comment">
                                           <p class="big-comment-text">@item.IdCommentTextNavigation.Text</p>
                                        </div>
                                    </div>
                            </div>
                            }

                            


                        </div>
                        
                    </div>

